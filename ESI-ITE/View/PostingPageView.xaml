<Page x:Class="ESI_ITE.ViewModel.PostingPageView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ESI_ITE.ViewModel"
      xmlns:vm="clr-namespace:ESI_ITE.ViewModel"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="PostingPageView">
    <Page.DataContext>
        <vm:PostingPageViewModel x:Name="viewModel"/>
    </Page.DataContext>

    <Grid>
        <StackPanel Orientation="Vertical" VerticalAlignment="Center">
            <ProgressBar Height="30" MinWidth="200" MaxWidth="500" Margin="10"
                         Minimum="0" Maximum="{Binding PbMax}" Value="{Binding PbValue}" IsTabStop="False" IsHitTestVisible="False"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Post" Height="30" Width="80" Margin="10" Background="White"
                    Command="{Binding PostCommand}"/>

                <Button Content="Cancel" Height="30" Width="80" Margin="10" Background="White"
                    Command="{Binding Cancelcommand}" />
            </StackPanel>

        </StackPanel>
    </Grid>
</Page>
